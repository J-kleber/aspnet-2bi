@model Torneio.model.Usuarios
@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Detalhes do Usuário</h4>
    <hr />
    <table class="table table-striped">
        <tbody>
            <tr>
                <th width="10%">@Html.DisplayNameFor(model => model.Email)</th>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <th width="10%">@Html.DisplayNameFor(model => model.Senha)</th>
                <td>@Html.DisplayFor(model => model.Senha)</td>
            </tr>
            <tr>
                <th width="10%">@Html.DisplayNameFor(model => model.Tipo)</th>
                <td>@Html.DisplayFor(model => model.Tipo)</td>
            </tr>
            <tr>
                <th width="10%">@Html.DisplayNameFor(model => model.Ativo)</th>
                <td>@Html.DisplayFor(model => model.Ativo)</td>
            </tr>
            <tr>
                <th width="10%">@Html.DisplayNameFor(model => model.Nome)</th>
                <td>@Html.DisplayFor(model => model.Nome)</td>
            </tr>
            <tr>
                <th width="10%">@Html.DisplayNameFor(model => model.Sobrenome)</th>
                <td>@Html.DisplayFor(model => model.Sobrenome)</td>
            </tr>
        </tbody>
    </table>
</div>

<p>
    <a class="btn btn-light" href="@Url.Action("Index")"><i class="fas fa-arrow-left"></i> Voltar</a> &nbsp;
    <a class="btn btn-info" href="@Url.Action("Edit", new { id = Model.ID })"><i class="fas fa-edit"></i> Editar</a>
</p>
