@model Torneio.model.Partidas

@{
    ViewBag.Title = "Edit";
    int idTorneio = Model.IDTorneio;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Editar Partida</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    @Html.HiddenFor(model => model.ID)
    <div class="row" hidden>
        <div class="col-md-10">
            @Html.LabelFor(model => model.IDTorneio, "Torneio", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("IDTorneio", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDTorneio, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row" hidden>
        <div class="col-md-10">
            @Html.LabelFor(model => model.IDTime1, "Time 1", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("IDTime1", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDTime1, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row" hidden>
        <div class="col-md-10">
            @Html.LabelFor(model => model.IDTime2, "Time 2", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("IDTime2", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDTime2, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row" hidden>
        <div class="col-md-2">
            @Html.LabelFor(model => model.Rodada, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Rodada, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rodada, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Rodada, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Rodada, new { htmlAttributes = new { disabled = "disabled", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rodada, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-10">
            @Html.LabelFor(model => model.Torneios.Nome, "Torneio", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Torneios.Nome, new { htmlAttributes = new { disabled = "disabled", @class = "form-control" } })
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-4">
            @Html.LabelFor(model => model.Times.Nome, "Time de Casa", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Times.Nome, new { htmlAttributes = new { disabled = "disabled", @class = "form-control" } })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(model => model.PlacarTime1, "Placar Time de Casa", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.PlacarTime1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PlacarTime1, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(model => model.PlacarTime2, "Placar Time de Fora", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.PlacarTime2, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PlacarTime2, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => model.Times.Nome, "Time de Fora", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Times1.Nome, new { htmlAttributes = new { disabled = "disabled", @class = "form-control" } })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-offset-2 col-md-12">
            <a class="btn btn-light" href="@Url.Action("Index", "Partidas/Index/" + @idTorneio)"><i class="fas fa-arrow-left"></i> Voltar</a> &nbsp;
            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Salvar</button>
        </div>
    </div>
    <br />
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
