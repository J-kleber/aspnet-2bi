@model IEnumerable<Torneio.model.Times>

@{
    ViewBag.Title = "Index";
}

<h2>Times</h2>

<p>
    @Html.ActionLink("Adicionar Novo", "Create", new { id = "" }, htmlAttributes: new { @class = "btn  btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Emblema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sigla)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emblema)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sigla)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-success" }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
