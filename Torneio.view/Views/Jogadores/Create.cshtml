@model Torneio.model.Jogadores
@using Torneio.view.Controllers;
@{
    ViewBag.Title = "Create";
    UsuariosController ousuario = new UsuariosController();
    int idTime = 0;
    if (User.Identity.IsAuthenticated)
    {
        int idUsuario = ousuario.getUsuario(User.Identity.Name).ID;
        TimesController oTimes = new TimesController();
        idTime = oTimes.getTime(idUsuario).ID;
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Novo Jogador</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(model => model.Idade, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Idade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Idade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(model => model.Nacionalidade, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Nacionalidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nacionalidade, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.DataNascimento, htmlAttributes: new { @class = "control-label" })
                <input class="form-control text-box single-line valid" data-val="true" data-val-date="O campo DataNascimento deve ser uma data." data-val-required="O campo DataNascimento é obrigatório." id="DataNascimento" name="DataNascimento" type="date" value="" aria-describedby="DataNascimento-error" aria-invalid="false">
                @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <label class="control-label" for="IDTime" hidden>IdUsuario</label>
            <div class="col-md-12">
                <input class="form-control text-box single-line" id="IDTime" name="IDTime" type="text" value="@idTime" hidden>
                <span class="field-validation-valid text-danger" data-valmsg-for="IDTime" data-valmsg-replace="true"></span>
            </div>
        </div>

         <br />
        <div class="row">
            <div class="col-md-offset-2 col-md-12">
                <a class="btn btn-light" href="@Url.Action("Index")"><i class="fas fa-arrow-left"></i> Voltar</a> &nbsp;
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Criar</button>
            </div>
        </div>
        <br />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
