@model Torneio.model.Torneios

@{
    ViewBag.Title = "Delete";
}

<div>
    <h4>Excluir Torneio</h4>
    <hr />
    <table class="table table-striped">
        <tbody>
            <tr>
                <th width="10%">@Html.DisplayNameFor(model => model.Nome)</th>
                <td>@Html.DisplayFor(model => model.Nome)</td>
            </tr>
            <tr>
                <th width="10%">@Html.DisplayNameFor(model => model.Premiacao)</th>
                <td>@Html.DisplayFor(model => model.Premiacao)</td>
            </tr>
            <tr>
                <th width="10%">@Html.DisplayNameFor(model => model.Ano)</th>
                <td>@Html.DisplayFor(model => model.Ano)</td>
            </tr>
            <tr>
                <th width="10%">@Html.DisplayNameFor(model => model.Realizador)</th>
                <td>@Html.DisplayFor(model => model.Realizador)</td>
            </tr>
        </tbody>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <p>
            <a class="btn btn-light" href="@Url.Action("Index")"><i class="fas fa-arrow-left"></i> Voltar</a> &nbsp;
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Deletar</button>
        </p>
    }
</div>
