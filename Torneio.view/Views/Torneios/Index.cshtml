@model IEnumerable<Torneio.model.Torneios>

@{
    ViewBag.Title = "Index";
}

<h2>Torneios</h2>

<p>
    @Html.ActionLink("Adicionar novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Premiacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ano)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Realizador)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Premiacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ano)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Realizador)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-success" }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
