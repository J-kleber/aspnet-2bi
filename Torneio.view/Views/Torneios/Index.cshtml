@model IEnumerable<Torneio.model.Torneios>
@using Torneio.view.Controllers
@using Torneio.model

@{
    ViewBag.Title = "Index";
    UsuariosController ousuario = new UsuariosController();
    string tipoUsuario = "";
    string hidden = "";
    if (User.Identity.IsAuthenticated)
    {
        Usuarios oUsuario = ousuario.getUsuario(User.Identity.Name);
        tipoUsuario = oUsuario.Tipo;
    }
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Premiacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ano)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Realizador)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Premiacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Realizador)
            </td>
            <td>
                @if (User.IsInRole("Organizador"))
                {
                    <a class="btn btn-success" href="@Url.Action("Details", new { id = item.ID })"><i class="fas fa-eye"></i> Ver</a>
                    <a class="btn btn-info" href="@Url.Action("Edit", new { id = item.ID })"><i class="fas fa-edit"></i> Editar</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.ID })"><i class="fas fa-trash"></i> Excluir</a>
                }

                @Html.ActionLink("Tabela", "Tabela", new { id = item.ID }) |
                @Html.ActionLink("Partidas", "../Partidas/index", new { id = item.ID })
            </td>
        </tr>
    }

</table>
